<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTextPrimary"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:paddingStart="@dimen/default_padding"
    android:paddingEnd="@dimen/default_padding">

    <TextView
        android:id="@+id/bottom_sheet_song_history_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead" />

    <TextView
        android:id="@+id/bottom_sheet_song_history_item_time_stamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/bottom_sheet_song_history_item_time"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/default_padding"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

    <ImageView
        android:id="@+id/bottom_sheet_song_history_item_location"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@drawable/ic_location_off_black"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>